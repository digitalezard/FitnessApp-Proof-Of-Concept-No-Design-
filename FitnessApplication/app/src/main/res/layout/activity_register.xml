<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.supinfo.fitnessapplication.RegisterActivity">

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:windowSoftInputMode="adjustResize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Register"
                android:textSize="25dp"/>

            <TextView
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/NewUserNameArea"
                android:text="UserName:" />

            <EditText
                android:layout_marginTop="25dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/NewUserNameArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="105dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/NewUserPwdArea"
                android:text="Password:" />

            <EditText
                android:layout_marginTop="85dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/NewUserPwdArea"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"/>

            <TextView
                android:layout_marginTop="183dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/RegisterradioGender"
                android:text="Gender" />

            <RadioGroup
                android:layout_marginTop="160dp"
                android:layout_marginLeft="80dp"
                android:id="@+id/RegisterradioGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/RegisterradioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/RegisterradioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

            </RadioGroup>

            <TextView
                android:layout_marginTop="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/NewUserAgeArea"
                android:text="Age:" />

            <EditText
                android:layout_marginTop="220dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/NewUserAgeArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="290dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/NewUserHeightArea"
                android:text="Height:" />

            <EditText
                android:layout_marginTop="270dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/NewUserHeightArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="350dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/NewUserMailArea"
                android:text="Email:" />

            <EditText
                android:layout_marginTop="330dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/NewUserMailArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="410dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/FirstWeightArea"
                android:text="Weight:" />

            <EditText
                android:layout_marginTop="390dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/FirstWeightArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_alignParentRight="true"
                android:layout_marginTop="490dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ButtonSendRegister"
                android:onClick="onClick"
                android:text="Send" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
